<div class="tab-content">
    <div class="tab-pane active" id="basic">
        <div class="row">
            <div class='col-sm-4 col-md-4'>
                <%- FORM.select("compania", scope, {
                    allownull: false,
                    allownew: false,
                    allowedit: false,
                    allowview: false,
                    allowlist: false,
                    refresh: true,
                    text: "item.nombre",
                    table: "compania",
                    icon: {class: "archive"},
                    label: "Compañía"
                }) %>
            </div>
        </div>
        <div class="row">
            <div class='col-sm-12 col-md-12'>
                <%- FORM.textarea('description', scope, {
                    //maxlength: 200,
                }) %>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 col-md-3">
                <%- FORM.file("import", scope, {
                    title: 'Subir Archivo de Carga XLS',
                    maxfiles: 1,
                    columns: 1,
                    truetext: 'Subir Archivo de Carga XLS',
                    acceptedFiles: ".xls, .xlsx",
                    acceptedFiles_message: "Sólo se pueden subir archivos de tipo xls"
                }) %>
            </div>
            <div class="col-sm-9 col-md-9">
                <button ng-show="<%= scope %>.form.mode!=='new'"
                        dragonlanguage="" title="Ejecutar el archivo cargado"
                        type="button" role="button" class=" btn bg-warning-800 btn-labeled btn-xs pull-right"
                        ng-click="<%= scope %>.executeFile(<%= scope %>.id)">
                    <b><i class="icon-archive"></i></b>
                    Ejecutar
                </button>
            </div>
        </div>
    </div>
</div>
<br>
<%- FORM.footer(scope) %>





