                    allownew: false,
                    allowedit: false,
                    allowview: false,
                    allowlist: false,
                    table: "procesos_categoria",
                    truelabel: "Macroproceso",
                    text: "item.nombre",
                    icon: {class: "archive"},
                    disabled: true
                }) %>
            </div>
