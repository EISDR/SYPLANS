            <div class='col-sm-6 col-md-6'>
                <%- FORM.textarea('delete_doc_resultado_esperado', scope, {
                    trueplaceholder: "Resultado Esperado",
                    disbled: true
                        //maxlength: 200,
                }) %>
            </div>
            <div class='col-sm-6 col-md-6' ng-show="!<%= scope%>.delete_doc_trabaja_marco_legal">
