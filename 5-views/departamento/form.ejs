<div class="tab-content">
    <div class="tab-pane active" id="basic">
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <%- FORM.input("nombre", scope, {maxlength: 1000}) %>
            </div>
            <div class='col-sm-4 col-md-4'>
                <%- FORM.select('direccion_area', scope, {
                    allownew: false,
                    allowedit: false,
                    allowview: false,
                    allowlist: false,
                    refresh: false,
                    multiple: false,
                    text: "item.nombre",
                    table: "direcciones_area",
                    columns: ["nombre"],
                    icon: {class: "archive"}
                }) %>
            </div>
            <div class="col-sm-12 col-md-12">
                <%- FORM.textarea('descripcion',scope,{maxlength: 4000}) %>
            </div>
        </div>
    </div>
</div>
<%- FORM.footer(scope) %>