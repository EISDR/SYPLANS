<div class="col-sm-6 col-md-6" ng-if="<%= scope %>.indicadores==='pei'">
    <%- FORM.select("indicador", scope, {
        allownew: false,
        allowedit: false,
        allowview: false,
        allowlist: false,
        refresh: false,
        text: "item.no_indicador+ ' ' +item.nombre",
        table: "vw_indicador_pei_drp",
