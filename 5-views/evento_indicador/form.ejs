<div class="tab-content">
    <div class="tab-pane active" id="basic">
        <div class="row">
            <div class='col-sm-4 col-md-4'>
                <%- FORM.input('nombre', scope, {}) %>
            </div>
            <div class='col-sm-4 col-md-4'>
                <%- FORM.select('urgencia', scope, {
                    allownew: false,
                    allowedit: false,
                    allowview: false,
                    allowlist: false,
                    multiple: false,
                    disabled: false,
                    label: "Urgencia",
                    text: "item.nombre",
                    table: "evento_indicador_urgencia",
                    icon: {class: "archive"},
                }) %>
            </div>
            <div class='col-sm-12 col-md-12'>
                <%- FORM.textarea('descripcion', scope, {
                //maxlength: 200,
                }) %>
            </div>
            <div class="col-sm-12 col-md-12">
                <%- FORM.relation("event_indicador_relacionado", scope, {
                    table: "evento_indicador_relacion",
                    field: "evento_indicador",
                    master: null,
                    icon: {class: "archive"}
                }) %>
            </div>
        </div>
    </div>
</div>

<%- FORM.footer(scope) %>
<script>
    evento_indicador_relacion.setPermission("actions", true);
    evento_indicador_relacion.setPermission("filter", true);
    evento_indicador_relacion.setPermission("export", true);
    evento_indicador_relacion.setPermission("audit", true);
    evento_indicador_relacion.setPermission("add", true);
</script>




