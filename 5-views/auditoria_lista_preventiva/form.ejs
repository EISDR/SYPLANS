<div class="tab-content">
    <div class="tab-pane active" id="basic">
        <div class="row">
            <div class='col-sm-12 col-md-12'>
                <%- FORM.input('nombre', scope, {}) %>
            </div>
            <div class='col-sm-6 col-md-6' ng-show="false">
                <%- FORM.inputview('initstatus', scope, {trueplaceholder: "Estatus", value: "Pendiente"}) %>
                <script>
                    <%= scope %>.initstatus = <%= scope %>.firststatus.nombre;
                    <%= scope %>.refreshAngular();
                </script>

            </div>
            <div class='col-sm-6 col-md-6' ng-show="false">
                <%- FORM.select('estatus', scope, {
                    column: 'name',
                    text: "item.nombre",
                    table: 'auditoria_lista_status'
                }) %>
            </div>
            <div class='col-sm-4 col-md-4'>
                <%- FORM.select('departamento', scope, {
                    column: 'name',
                    table: 'departamento',
                    truelabel: "Departamento",
                    condition: "item.compania==" + scope + ".session.compania_id && (" + scope + ".session.institucion_id?(" + scope + ".session.institucion_id==item.institucion):(item.institucion==$null))",
                    text: 'item.nombre',
                    allownew: false,
                    allowedit: false,
                    allowview: false,
                    allowlist: false
                }) %>
            </div>
            <div class='col-sm-4 col-md-4'>
                <%- FORM.select('responsable', scope, {
                    column: 'name',
                    text: "item.completo",
                    table: 'vw_usuario',
                    condition: scope + ".departamento!='[NULL]' ? (item.departamento==" + scope + ".departamento) : (item.compania==" + scope + ".session.compania_id && (" + scope + ".session.institucion_id?(" + scope + ".session.institucion_id==item.institucion):(item.institucion==$null)))",
                    allownew: false,
                    allowedit: false,
                    allowview: false,
                    allowlist: false
                }) %>
            </div>
            <div class='col-sm-4 col-md-4'>
                <%- FORM.datetime('ejecucion', scope, {label: 'Fecha de Ejecución', label_custom: true}) %>
            </div>
            <div class='col-sm-12 col-md-12'>
                <%- FORM.textarea('descripcion', scope, {
                    trueplaceholder: "Observación de Acción Preventiva"
                }) %>
            </div>
        </div>
    </div>
</div>

<%- FORM.footer(scope) %>





