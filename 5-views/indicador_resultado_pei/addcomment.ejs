<div class="subcontent">
    <div ng-show="indicador_resultado_pei.edit" class="row">
        <div class="col-sm-10 col-md-10" style="padding-bottom: 30px;">
            <%- FORM.textarea("comentario", scope, {
                placeholder: "Comentario"
            }) %>
        </div>
        <div class="col-sm-2 col-md-2" style="margin-top: 24px;">
            <button
                    dragonlanguage="" title="Agregar Comentario"
                    type="button" role="button" class=" btn bg-<%= COLOR.success %>-800 btn-labeled btn-xs pull-right"
                    ng-click="indicador_resultado_pei.add_comentario()">

                <b><i class="icon-floppy-disk"></i></b>
                <language>Agregar</language>
            </button>
        </div>
    </div>
    <div class="row">
        <div id="vw_comentarios" ng-controller="vw_comentarios as vw_comentarios">
            <div class="panel panel-flat">
                <%- include('../../7-plugins/templates/table/header',{scope:'vw_comentarios'}); %>
                <div class="subcontent">
                    <%- include('../../7-plugins/templates/table/base',{scope:'vw_comentarios'}); %>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    if (vw_comentarios.group_caracteristica !== ENUM_2.Grupos.director_general && vw_comentarios.group_caracteristica !== ENUM_2.Grupos.analista_de_planificacion){
        vw_comentarios.setPermission("actions", false);
        vw_comentarios.setPermission("remove", false);
    }else{
        vw_comentarios.setPermission("actions", true);
        vw_comentarios.setPermission("remove", true);
    }
</script>
