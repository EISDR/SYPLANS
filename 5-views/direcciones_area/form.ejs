<%- FORM.footer(scope) %>

<script>
    $(function (){
        $('[name="direcciones_area_nombre"]').keyup(function (){
            setTimeout(function (){
                if (!DSON.oseaX($('[name="direcciones_area_nombre"]').val())){
                    direcciones_area.validate.nombre.valid = true;
                    direcciones_area.validate.nombre.type = "success";
                    direcciones_area.refreshAngular();
                }else {
                    direcciones_area.validate.nombre.valid = false;
                    direcciones_area.validate.nombre.type = "error";
                    direcciones_area.refreshAngular();
                }
                direcciones_area.refreshAngular();
            },100);
            direcciones_area.refreshAngular();
        })

    });
</script>



