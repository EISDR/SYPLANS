                                multiple: false,
                                text: "item.nombre + ' ' + item.apellido",
                                table: "usuario",
                                columns: ["nombre"],
                                condition: "(item.compania == drp_actividades_apoyo.session.compania_id && item.institucion == $null) && (item.active)",
                                icon: {class: "archive"}
