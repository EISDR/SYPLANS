                                allownull: false,
                                allownew: false,
                                allowedit: false,
                                allowview: false,
                                allowlist: false,
                                multiple: false,
                                text: "item.nombre + ' ' + item.apellido",
                                table: "usuario",
                                columns: ["nombre"],
                                condition: "(item.institucion == drp_actividades_apoyo.session.institucion_id) && (item.active)",
                                icon: {class: "archive"}
                            }) %>
                        </div>
                    </div>
                    <div class='col-sm-8 col-md-8'>
                        <%- FORM.input('comentario', scope, {}) %>
                    </div>
                </div>
