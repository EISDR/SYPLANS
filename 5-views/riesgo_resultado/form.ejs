<div class="tab-content">
    <div class="tab-pane active" id="basic">
        <div class="row">
            <div class='col-sm-4 col-md-4'>
                <%- FORM.input('nombre', scope, {}) %>
            </div>
            <div class='col-sm-4 col-md-4'>
                <%- FORM.color('color', scope, {}) %>
            </div>
            <div class='col-sm-2 col-md-2'>
                <%- FORM.integer('valor', scope, {
                    trueplaceholder: "Rango Desde",
                    length: 18,
                    decimal: 0
                }) %>
            </div>
            <div class='col-sm-2 col-md-2'>
                <%- FORM.integer('valor_to', scope, {
                    trueplaceholder: "Rango Hasta",
                    length: 18,
                    decimal: 0
                }) %>
            </div>
        </div>
        <div class="row">
            <div class='col-sm-12 col-md-12'>
                <%- FORM.textarea('descripcion', scope, {
                    //maxlength: 200,
                }) %>
            </div>
        </div>
    </div>
</div>

<%- FORM.footer(scope) %>





